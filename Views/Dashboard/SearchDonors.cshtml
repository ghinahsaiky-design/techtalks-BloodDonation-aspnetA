@model SearchViewModel
@{
    ViewData["Title"] = "Search For Donors";
}

<main class="flex justify-center bg-gray-100 py-10">
    <div class="w-full max-w-7xl px-4">

        <!-- Search Section -->
        <div class="rounded-2xl bg-white shadow-lg p-8">
            <!-- Heading -->
            <div class="mb-6">
                <h1 class="text-3xl font-bold text-gray-900">
                    Find a Blood Donor
                </h1>
                <p class="mt-2 text-gray-600">
                    Search for available blood donors in your area.
                </p>
            </div>

            <!-- Filters -->
            <form method="get"
                  asp-controller="Dashboard"
                  asp-action="SearchDonors"
                  class="flex flex-col items-center gap-6 md:flex-row md:justify-center">

                <!-- Location -->
                <div class="flex w-full max-w-md flex-col">
                    <label class="pb-2 text-base font-medium leading-normal">
                        Location
                    </label>
                    <div class="relative w-full">
                        <span class="material-symbols-outlined pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-text-light-secondary dark:text-dark-secondary">location_on</span>
                    <select asp-for="SelectedLocationId"
                            asp-items="Model.Locations"
                                class="form-select flex w-100 min-w-0 flex-1 cursor-pointer appearance-none resize-none overflow-hidden rounded-lg h-14 border border-border-light bg-card-light dark:border-border-dark dark:bg-background-dark pl-11 p-[15px] pr-10 text-base font-normal leading-normal text-text-light-primary dark:text-dark-primary placeholder:text-text-light-secondary focus:border-primary focus:ring-2 focus:ring-primary/20">
                        <option value="">Select Location</option>
                    </select>
                    </div>
                </div>

                <!-- Blood Type -->
                <div class="flex w-full max-w-md flex-col">
                    <label class="pb-2 text-base font-medium leading-normal">
                        Blood Type
                    </label>
                    <div class="relative w-full">
                    <span class="material-symbols-outlined pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-text-light-secondary dark:text-dark-secondary">bloodtype</span>
                    <select asp-for="SelectedBloodTypeId"
                            asp-items="Model.BloodTypes"
                                class="form-select flex w-full min-w-0 flex-1 cursor-pointer appearance-none resize-none overflow-hidden rounded-lg h-14 border border-border-light bg-card-light dark:border-border-dark dark:bg-background-dark pl-11 p-[15px] pr-10 text-base font-normal leading-normal text-text-light-primary dark:text-dark-primary placeholder:text-text-light-secondary focus:border-primary focus:ring-2 focus:ring-primary/20">
                        <option value="">Select Blood Type</option>
                    </select>
                    </div>
                </div>

                

                <!-- Search Button -->
                <div class="flex w-full max-w-md pt-7 items-end ">
                    <button type="submit"
                            class="flex h-14 w-full items-center justify-center gap-2 rounded-lg bg-red-600 px-6 text-xl font-semibold text-white hover:bg-red-700 transition">
                        <span class="material-symbols-outlined text-2xl">
                            search
                        </span>
                        Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Results -->
        <div class="flex flex-col gap-4 mt-6">
            @if (Model.Results != null && Model.Results.Any())
            {
                <h2 class="text-2xl font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">
                    Showing @Model.Results.Count result(s)
                </h2>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 px-4 pb-6">
                    @foreach (var d in Model.Results)
                    {
                        <div class="rounded-xl border border-border-light bg-card-light dark:bg-card-dark p-4 shadow-subtle">
                            <p class="text-lg font-semibold">@d.DonorName</p>
                            <p class="text-sm text-gray-600">Blood Type: @d.BloodType</p>
                            <p class="text-sm text-gray-600">City: @d.City</p>
                            <p class="text-sm text-gray-600">Phone: @d.Email</p>
                            <p class="text-sm text-gray-600">Phone: @d.PhoneNumber</p>
                        </div>

                    }
                </div>
            }
            else
            {
                <p class="px-4 pt-4 text-text-light-secondary dark:text-dark-secondary">
                    No donors found yet. Please select filters and click Search.
                </p>
            }
        </div>
            

    </div>
</main>
