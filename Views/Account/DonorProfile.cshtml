@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen pt-24 pb-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Profile Header Card -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Cover Image -->
            <div class="h-32 bg-gradient-to-r from-red-500 to-red-600"></div>
            
            <!-- Profile Info -->
            <div class="relative px-6 pb-6">
                <!-- Avatar -->
                <div class="absolute -top-12 left-6">
                    <div class="w-24 h-24 bg-soft-red rounded-full border-4 border-white shadow-lg flex items-center justify-center">
                        <span class="text-white text-3xl font-bold">
                            @(User.FindFirst("FirstName")?.Value?.Substring(0, 1).ToUpper() ?? "U")
                        </span>
                    </div>
                </div>
                
                <!-- Name and Info -->
                <div class="pt-16">
                    <h1 class="text-2xl font-bold text-gray-800">
                        @(User.FindFirst("FirstName")?.Value ?? "User")
                    </h1>
                    <p class="text-gray-500 mt-1">Blood Donor</p>
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="mt-8 bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Profile Information</h2>
            <p class="text-gray-600">
                Welcome to your profile page. Here you can view and manage your donor information.
            </p>
            
            <!-- Add more profile content here -->
            <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="p-4 bg-gray-50 rounded-xl">
                    <h3 class="text-sm font-medium text-gray-500">Email</h3>
                    <p class="mt-1 text-gray-800">@User.Identity?.Name</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-xl">
                    <h3 class="text-sm font-medium text-gray-500">Role</h3>
                    <p class="mt-1 text-gray-800">Donor</p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-8 bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h2>
            <div class="flex flex-wrap gap-4">
                <a asp-controller="Dashboard" asp-action="SearchDonors"
                   class="inline-flex items-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                    <span class="material-symbols-outlined text-sm">search</span>
                    Find Donors
                </a>
                <a href="#"
                   class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                    <span class="material-symbols-outlined text-sm">edit</span>
                    Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>
