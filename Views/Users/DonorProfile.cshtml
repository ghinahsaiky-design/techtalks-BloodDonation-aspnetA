
@model BloodDonation.Models.EditDonorProfileViewModel


<div class="min-h-screen bg-gray-50 flex flex-col items-center py-12 px-4">
    <!-- Page Header -->
    <h1 class="text-3xl font-bold text-gray-800 mb-8">My Profile</h1>

    <!-- Profile Card -->
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-3xl">
        <!-- Profile Header -->
        <div class="flex items-center gap-6">
            <img src=""
                 alt=""
                 class="w-24 h-24 rounded-full object-cover border-4 border-gray-100 shadow-sm" />

            <div class="flex-1">
                <h2 class="text-xl font-bold text-gray-900">@Model.FirstName</h2>
                <p class="text-gray-500">@Model.LocationId, @Model.LocationId</p>
            </div>

            <div class="flex items-center justify-end gap-2 text-red-600">
                <i class="bi bi-droplet-fill text-lg"></i>
                <span class="font-semibold">@Model.BloodTypeId</span>
            </div>
        </div>

        <!-- Donor Details -->
        <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="bg-gray-100 px-4 py-3 rounded-lg">
                <p class="text-gray-500 text-sm">Gender</p>
                <p class="text-gray-800 font-semibold">@Model.Gender</p>
            </div>

            <div class="bg-gray-100 px-4 py-3 rounded-lg">
                <p class="text-gray-500 text-sm">Date of Birth</p>
                <p class="text-gray-800 font-semibold">@Model.DateOfBirth</p>
            </div>

            <div class="bg-gray-100 px-4 py-3 rounded-lg">
                <p class="text-gray-500 text-sm">Health Status</p>
                <p class="text-gray-800 font-semibold">
                    @(Model.IsHealthyForDonation ? "Healthy" : "Not Eligible")
                </p>
            </div>

            <div class="bg-gray-100 px-4 py-3 rounded-lg">
                <p class="text-gray-500 text-sm">Last Donation Date</p>
                <p class="text-gray-800 font-semibold">
                    
                </p>
            </div>
        </div>

        <!-- Identity Toggle -->
        <div class="mt-8 flex items-center justify-between">
            <span class="text-gray-700 font-medium">Show my identity on public requests</span>

            <form asp-action="ToggleIdentity" method="post" class="flex items-center">
                <input type="hidden" name="donorId" value="@Model.FirstName" />
                <label class="inline-flex items-center cursor-pointer relative">
                    <input type="checkbox"
                           onchange="this.form.submit()"
                           class="sr-only peer"
                           checked="@( !Model.IsIdentityHidden )" />
                    <div class="w-11 h-6 bg-gray-200 peer-focus:ring-2 peer-focus:ring-red-300 rounded-full peer-checked:bg-red-600
                        after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300
                        after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full">
                    </div>
                </label>
            </form>
        </div>

        <!-- Availability Section -->
        <div class="mt-10 text-center bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 font-medium mb-3">Your current status:</p>

                <form asp-action="ToggleAvailability" method="post">
                    <input type="hidden" name="donorId" value="@Model.FirstName" />
                    <div>
                        <span class="flex justify-center items-center gap-2 text-green-600 font-semibold">
                            <span class="w-3 h-3 rounded-full bg-green-600"></span> Available to Donate
                        </span>
                        <button type="submit"
                                class="mt-4 bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-lg transition">
                            Set as Unavailable
                        </button>
                    </div>
                </form>
            
        </div>

        <!-- Buttons -->
        <div class="mt-8 flex flex-wrap gap-4 justify-center">
            <a href="/DonorProfile/Edit/@Model.FirstName"
               class="flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white px-6 py-2 rounded-lg font-semibold transition">
                <i class="bi bi-pencil-square"></i> Edit Profile
            </a>

            <a href="/Account/ChangePassword"
               class="flex items-center gap-2 border border-gray-300 hover:bg-gray-100 text-gray-700 px-6 py-2 rounded-lg font-semibold transition">
                <i class="bi bi-lock-fill"></i> Change Password
            </a>
        </div>
    </div>
</div>