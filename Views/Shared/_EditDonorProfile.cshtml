@using System.Linq
@model BloodDonation.Models.EditDonorProfileViewModel
@{
    string FirstName = Model.FirstName;
    string LastName = Model.LastName;

    var locations = ViewBag.Locations as IEnumerable<Locations> ?? new List<Locations>();
    var bloodTypes = ViewBag.BloodTypes as IEnumerable<BloodTypes> ?? new List<BloodTypes>();

    string location = locations.FirstOrDefault(l => l.LocationId == Model.LocationId)?.Districts ?? "";
    string bloodType = bloodTypes.FirstOrDefault(b => b.BloodTypeId == Model.BloodTypeId)?.Type ?? "";
    string healthy = Model.IsHealthyForDonation ? "Healthy" : "Not Healthy";
    string checkIdentity = Model.IsIdentityHidden ? "Hidden" : "Not Hidden";
    string available = Model.IsAvailable ? "Available" : "Unavailable";
}


    <div class="flex justify-center p-4">
        <div class="w-full max-w-lg bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 space-y-6">

            <!-- Edit Profile Form -->
            <form asp-action="EditProfile" asp-controller="Users" method="post" class="space-y-4">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium">First Name</label>
                        <input asp-for="FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium">Last Name</label>
                        <input asp-for="LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium">Email</label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                        <label class="block text-sm font-medium">Blood Type</label>
                        <select asp-for="BloodTypeId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                asp-items="@(new SelectList(ViewBag.BloodTypes, "BloodTypeId", "Type"))">
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium">Location</label>
                        <select asp-for="LocationId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                asp-items="@(new SelectList(ViewBag.Locations, "LocationId", "Districts"))">
                        </select>
                    </div>
                </div>

                <div>
                    <label asp-for="DateOfBirth" class="block text-sm font-medium">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                </div>

                <div class="flex flex-col sm:flex-row sm:items-center gap-4 mt-2">
                    <div class="flex items-center gap-2">
                        <input asp-for="IsHealthyForDonation" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="IsHealthyForDonation" class="text-sm font-medium">Healthy for donation</label>
                    </div>
                    <div class="flex items-center gap-2">
                        <input asp-for="IsIdentityHidden" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="IsIdentityHidden" class="text-sm font-medium">Hide my identity</label>
                    </div>
                    <div class="flex items-center gap-2">
                        <input asp-for="IsAvailable" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="IsAvailable" class="text-sm font-medium">Available for donation</label>
                    </div>
                </div>

                <button type="submit" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md shadow-sm transition-colors">
                    Save Changes
                </button>
            </form>
        </div>
    </div>