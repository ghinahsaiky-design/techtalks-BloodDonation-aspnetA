@model BloodDonation.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}

<style>
    /* Make input icons black & white */
    .input-group-text i {
        color: #6c757d !important; /* gray */
        font-size: 1.1rem;
    }

    .input-group-text {
        background-color: transparent !important;
        border-right: none;
    }

    /* Red login link */
    .login-link {
        color: #E94E4E;
        font-weight: 500;
        text-decoration: none;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm border-0 rounded-4" style="max-width: 480px; width: 100%;">
        <div class="card-body p-4 p-md-5">

            <h2 class="fw-bold text-center mb-1">Create Your Donor Account</h2>
            <p class="text-muted text-center mb-4">
                Join BloodConnect and help save lives.
            </p>

            <form asp-action="SignUp" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Full Name -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="FullName" class="form-control border-start-0" placeholder="Full Name" />
                </div>
                <span asp-validation-for="FullName" class="text-danger small"></span>

                <!-- Email -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-at"></i>
                    </span>
                    <input asp-for="Email" class="form-control border-start-0" placeholder="Email Address" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>

                <!-- Password -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>

                <!-- Confirm Password -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control border-start-0" placeholder="Confirm Password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

                <!-- Phone -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-telephone"></i>
                    </span>
                    <input asp-for="Phone" class="form-control border-start-0" placeholder="Phone Number" />
                </div>
                <!-- Gender -->
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-gender-ambiguous"></i>
                    </span>
                    <select asp-for="Gender" class="form-select border-start-0">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <span asp-validation-for="Gender" class="text-danger small"></span>


                <!-- Location + Blood Type -->
                <div class="row mb-3 select-icon-group">
                    <!-- Location -->
                    <div class="col-6">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-geo-alt"></i>
                            </span>
                            <select asp-for="LocationId" class="form-select border-start-0">
                                <option value="">Select Location</option>
                                @foreach (var loc in Model.Locations)
                                {
                                    <option value="@loc.LocationId">@loc.Districts</option>
                                }
                            </select>

                        </div>
                        <span asp-validation-for="LocationId" class="text-danger small"></span>
                    </div>

                    <!-- Blood Type -->
                    <div class="col-6">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-droplet"></i>
                            </span>
                            <select asp-for="BloodTypeId" class="form-select border-start-0">
                                <option value="">Select Blood Type</option>
                                @foreach (var bt in Model.BloodTypes)
                                {
                                    <option value="@bt.BloodTypeId">@bt.Type</option>
                                }
                            </select>

                        </div>
                        <span asp-validation-for="BloodTypeId" class="text-danger small"></span>
                    </div>
                </div>


                <!-- Checkboxes -->
                <div class="form-check mb-2">
                    <input asp-for="IsHealthyForDonation" class="form-check-input" />
                    <label asp-for="IsHealthyForDonation" class="form-check-label">
                        I confirm I am eligible to donate.
                    </label>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsIdentityHidden" class="form-check-input" />
                    <label asp-for="IsIdentityHidden" class="form-check-label">
                        Hide my identity from recipients.
                    </label>
                </div>

                <!-- Button -->
                <button type="submit"
                        class="btn btn-lg w-100 rounded-pill"
                        style="background-color:#E94E4E; color:white;">
                    Sign Up
                </button>

                <p class="text-center mt-3 small mb-0">
                    Already have an account?
                    <a asp-controller="Auth" asp-action="Login" class="login-link">Log In</a>
                </p>
            </form>

        </div>
    </div>
</div>
