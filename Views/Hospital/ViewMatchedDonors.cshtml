@model BloodDonation.Models.MatchedDonorsViewModel
@{
    Layout = "_HospitalLayout";
    ViewData["Title"] = "Matched Donors";
}

<main class="flex-1 overflow-y-auto p-8">
    <div class="max-w-[1200px] mx-auto flex flex-col gap-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <a asp-action="ViewRequests" class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary transition-colors mb-2">
                    <span class="material-symbols-outlined text-sm">arrow_back</span>
                    <span class="text-sm font-medium">Back to Requests</span>
                </a>
                <h1 class="text-2xl font-black text-[#181112] dark:text-white">Matched Donors</h1>
                <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Request #@Model.Request.RequestId - @Model.Request.BloodType?.Type</p>
            </div>
        </div>

        <!-- Request Info Card -->
        <div class="bg-white dark:bg-[#1a1a1a] rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm p-6">
            <h2 class="text-lg font-bold text-[#181112] dark:text-white mb-4">Request Details</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Patient Name</p>
                    <p class="text-sm font-semibold text-[#181112] dark:text-white">@Model.Request.PatientName</p>
                </div>
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Blood Type</p>
                    <p class="text-sm font-semibold text-[#181112] dark:text-white">@Model.Request.BloodType?.Type</p>
                </div>
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Urgency Level</p>
                    <p class="text-sm font-semibold text-[#181112] dark:text-white">@Model.Request.UrgencyLevel</p>
                </div>
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Status</p>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(Model.Request.Status == "Approved" ? "bg-primary/10 text-primary" : Model.Request.Status == "Completed" ? "bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-400" : "bg-yellow-50 text-yellow-700 dark:bg-yellow-900/20 dark:text-yellow-400")">
                        @Model.Request.Status
                    </span>
                </div>
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Created At</p>
                    <p class="text-sm font-semibold text-[#181112] dark:text-white">@Model.Request.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
            </div>
        </div>

        <!-- Matched Donors List -->
        <div class="bg-white dark:bg-[#1a1a1a] rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
            <div class="p-6 border-b border-gray-100 dark:border-gray-800 flex justify-between items-center">
                <h2 class="text-lg font-bold text-[#181112] dark:text-white">Matched Donors (@Model.MatchedDonors.Count)</h2>
                <p class="text-sm text-gray-500 dark:text-gray-400">Donors who received notification emails</p>
            </div>

            @if (Model.MatchedDonors.Any())
            {
                <div class="divide-y divide-gray-100 dark:divide-gray-800">
                    @foreach (var donor in Model.MatchedDonors)
                    {
                        <div class="p-6 hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                            <div class="flex flex-col lg:flex-row gap-6">
                                <!-- Left: Donor Info -->
                                <div class="flex-1">
                                    <div class="flex items-start gap-4">
                                        <div class="size-12 rounded-full bg-primary/10 text-primary flex items-center justify-center flex-shrink-0 font-bold text-lg">
                                            @(donor.DonorName.Length > 0 ? donor.DonorName.Substring(0, 1).ToUpper() : "?")
                                        </div>
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <h3 class="text-lg font-bold text-[#181112] dark:text-white">@donor.DonorName</h3>
                                                @{
                                                    var statusClass = donor.Status switch
                                                    {
                                                        "Confirmed" => "bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-400 border border-green-100 dark:border-green-900/30",
                                                        "Notified" => "bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-400 border border-blue-100 dark:border-blue-900/30",
                                                        "Pending" => "bg-yellow-50 text-yellow-700 dark:bg-yellow-900/20 dark:text-yellow-400 border border-yellow-100 dark:border-yellow-900/30",
                                                        _ => "bg-gray-50 text-gray-700 dark:bg-gray-900/20 dark:text-gray-400 border border-gray-100 dark:border-gray-900/30"
                                                    };
                                                }
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                                                    @donor.Status
                                                </span>
                                            </div>
                                            
                                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Email</p>
                                                    <p class="text-sm font-medium text-[#181112] dark:text-white">@donor.Email</p>
                                                </div>
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Phone Number</p>
                                                    <p class="text-sm font-medium text-[#181112] dark:text-white">@(string.IsNullOrEmpty(donor.PhoneNumber) ? "N/A" : donor.PhoneNumber)</p>
                                                </div>
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Blood Type</p>
                                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-red-100 text-red-700 font-bold text-xs dark:bg-red-900/30 dark:text-red-400 border border-red-200 dark:border-red-900/50">
                                                        @donor.BloodType
                                                    </span>
                                                </div>
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Location</p>
                                                    <p class="text-sm font-medium text-[#181112] dark:text-white">@donor.Location</p>
                                                </div>
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Last Donation</p>
                                                    <p class="text-sm font-medium text-[#181112] dark:text-white">
                                                        @(donor.LastDonationDate?.ToString("MMM dd, yyyy") ?? "Never")
                                                    </p>
                                                </div>
                                                <div>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Availability</p>
                                                    <div class="flex items-center gap-2">
                                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium @(donor.IsAvailable ? "bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-400" : "bg-red-50 text-red-700 dark:bg-red-900/20 dark:text-red-400")">
                                                            @(donor.IsAvailable ? "Available" : "Unavailable")
                                                        </span>
                                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium @(donor.IsHealthy ? "bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-400" : "bg-red-50 text-red-700 dark:bg-red-900/20 dark:text-red-400")">
                                                            @(donor.IsHealthy ? "Healthy" : "Not Healthy")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            @if (!string.IsNullOrEmpty(donor.Message))
                                            {
                                                <div class="mt-4 p-3 bg-gray-50 dark:bg-white/5 rounded-lg">
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Donor Message</p>
                                                    <p class="text-sm text-[#181112] dark:text-white">@donor.Message</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: Timeline Info -->
                                <div class="lg:w-48 flex-shrink-0">
                                    <div class="space-y-2">
                                        @if (donor.ContactedAt.HasValue)
                                        {
                                            <div>
                                                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Notified At</p>
                                                <p class="text-sm font-medium text-[#181112] dark:text-white">@donor.ContactedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                            </div>
                                        }
                                        @if (donor.ConfirmedAt.HasValue)
                                        {
                                            <div>
                                                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Status Updated</p>
                                                <p class="text-sm font-medium text-[#181112] dark:text-white">@donor.ConfirmedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="p-12 text-center">
                    <span class="material-symbols-outlined text-6xl text-gray-300 dark:text-gray-600 mb-4">people</span>
                    <p class="text-gray-500 dark:text-gray-400">No matched donors found for this request.</p>
                    <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">Donors will appear here once they are notified via email.</p>
                </div>
            }
        </div>
    </div>
</main>

