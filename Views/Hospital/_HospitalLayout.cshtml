@{
    Layout = null;
    var pageTitle = ViewData["Title"] as string ?? "Hospital Portal";
}

<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle - BloodConnect</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#d60528",
                        "background-light": "#f8f5f6",
                        "background-dark": "#230f13",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        .bg-primary { background-color: #d60528 !important; }
        .text-primary { color: #d60528 !important; }
        .border-primary { border-color: #d60528 !important; }
        .bg-primary\/10 { background-color: rgba(214, 5, 40, 0.1) !important; }
        .bg-primary\/20 { background-color: rgba(214, 5, 40, 0.2) !important; }
        .bg-primary\/30 { background-color: rgba(214, 5, 40, 0.3) !important; }
        .text-primary\/50 { color: rgba(214, 5, 40, 0.5) !important; }
        .hover\:bg-primary\/90:hover { background-color: rgba(214, 5, 40, 0.9) !important; }
        .focus\:border-primary:focus { border-color: #d60528 !important; }
        .focus\:ring-primary:focus { --tw-ring-color: #d60528 !important; }
        .shadow-primary\/20 { box-shadow: 0 4px 6px -1px rgba(214, 5, 40, 0.2), 0 2px 4px -1px rgba(214, 5, 40, 0.2) !important; }
        .border-primary\/20 { border-color: rgba(214, 5, 40, 0.2) !important; }
        .border-primary\/30 { border-color: rgba(214, 5, 40, 0.3) !important; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-[#181112] dark:text-white">
<div class="flex h-screen w-full overflow-hidden">
    <!-- Sidebar -->
    @await Component.InvokeAsync("HospitalSidebar")
    
    <!-- Main Content -->
    <div class="flex-1 flex flex-col h-full overflow-hidden bg-background-light dark:bg-background-dark">
        @RenderBody()
    </div>
</div>
@RenderSection("Scripts", required: false)
</body>
</html>

