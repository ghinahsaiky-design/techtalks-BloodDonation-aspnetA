@model BloodDonation.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="text-center mb-5">
                <h2 class="fw-bold text-center mb-3 display-4  text-danger">Get in Touch</h2>
                <p class="text-muted">
                    Whether you have questions, need support, or want to share feedback about BloodConnect,
                    we're here to help.
                </p>
            </div>

            <div class="row g-4">

                <!-- LEFT: FORM -->
                <div class="col-md-7">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body p-4">

                            <h5 class="mb-4 fw-semibold">Send us a message</h5>

                            <form asp-action="Contact" method="post">

                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control form-control-lg" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control form-control-lg" />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Message" class="form-label"></label>
                                    <textarea asp-for="Message" class="form-control form-control-lg" rows="4"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill">
                                    Send Message
                                </button>

                                @if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success mt-3">
                                        @ViewBag.Success
                                    </div>
                                }

                            </form>

                        </div>
                    </div>
                </div>

                <!-- RIGHT: INFO -->
                <div class="col-md-5">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        <div class="card-body p-4">

                            <h5 class="fw-semibold mb-3">Why contact us?</h5>
                            <p class="text-muted small">
                                • Learn more about how BloodConnect works<br />
                                • Report incorrect donor information<br />
                                • Request new features or improvements<br />
                                • Get technical support
                            </p>

                            <hr />

                            <h5 class="fw-semibold mb-2">Support Info</h5>
                            <p class="text-muted small mb-1">Email: BloodConnect.web@gmail.com</p>
                            <p class="text-muted small mb-3">Working hours: 9:00 AM – 6:00 PM</p>

                            <hr />

                            <h5 class="fw-semibold mb-2">Emergency Notice</h5>
                            <p class="text-muted small">
                                BloodConnect is not an emergency service.
                                Please contact a hospital in urgent cases.
                            </p>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}