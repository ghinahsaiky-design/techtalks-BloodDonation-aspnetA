@{
    ViewData["Title"] = "Privacy Policy";
}

<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

<script id="tailwind-config">
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            primary: "#d60528",
            "background-light": "#f8f5f6",
            "background-dark": "#230f13",
          },
          fontFamily: {
            display: ["Inter", "sans-serif"]
          },
          borderRadius: {
            DEFAULT: "0.25rem",
            lg: "0.5rem",
            xl: "0.75rem",
            full: "9999px"
          }
        }
      }
    }
</script>

<body class="font-display bg-background-light dark:bg-background-dark">
    <div class="relative flex min-h-screen w-full flex-col">
        <main class="px-4 sm:px-10 flex flex-1 justify-center py-5 mt-20">
            <div class="flex flex-col max-w-4xl flex-1 gap-8">

                <!-- Header -->
                <div class="flex flex-col gap-4 text-center items-center py-8">
                    <p class="text-[#343A40] dark:text-white text-4xl sm:text-5xl font-black">
                        Privacy Policy
                    </p>
                    <p class="text-slate-600 dark:text-slate-400 max-w-xl">
                        Your privacy matters. Learn how BloodConnect collects, uses, and protects your data.
                    </p>
                    <p class="text-sm text-slate-500">Last Updated: December 1, 2025</p>
                </div>

                <!-- Privacy Sections -->
                <div class="flex flex-col p-4 space-y-2 bg-white dark:bg-background-dark rounded-xl shadow-md">

                    <details class="border-b border-primary/20 py-2 group" open>
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                Information We Collect
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4 space-y-2">
                            <p>
                                We collect personal information that you voluntarily provide when registering
                                or using the BloodConnect platform.
                            </p>
                            <ul class="list-disc list-inside space-y-1">
                                <li>Personal identification data (name, contact information)</li>
                                <li>Health and eligibility data (blood type, donation history)</li>
                                <li>Technical data (IP address, device, browser)</li>
                            </ul>
                        </div>
                    </details>

                    <details class="border-b border-primary/20 py-2 group">
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                How We Use Your Information
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4 space-y-2">
                            <ul class="list-disc list-inside space-y-1">
                                <li>Manage and authenticate user accounts</li>
                                <li>Match donors with recipients efficiently</li>
                                <li>Improve platform features and usability</li>
                                <li>Ensure compliance with legal obligations</li>
                            </ul>
                            <p>
                                Aggregated and anonymized data may be used for analytics purposes.
                            </p>
                        </div>
                    </details>

                    <details class="border-b border-primary/20 py-2 group">
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                Data Sharing & Disclosure
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4 space-y-2">
                            <ul class="list-disc list-inside space-y-1">
                                <li><strong>With users:</strong> Limited details to enable donations</li>
                                <li><strong>With providers:</strong> Hosting, analytics, and email services</li>
                                <li><strong>Legal requirements:</strong> When required by law</li>
                            </ul>
                            <p class="font-medium">
                                We never sell or rent your personal data.
                            </p>
                        </div>
                    </details>

                    <details class="border-b border-primary/20 py-2 group">
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                Data Security
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4 space-y-2">
                            <ul class="list-disc list-inside space-y-1">
                                <li>Encrypted data storage and transfer</li>
                                <li>Secure password hashing</li>
                                <li>Restricted internal access</li>
                                <li>Regular security audits</li>
                            </ul>
                            <p>
                                While we use strong safeguards, no system is entirely risk-free.
                            </p>
                        </div>
                    </details>

                    <details class="border-b border-primary/20 py-2 group">
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                Your Rights
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4 space-y-2">
                            <ul class="list-disc list-inside space-y-1">
                                <li>Access your personal data</li>
                                <li>Request correction or deletion</li>
                                <li>Withdraw consent</li>
                            </ul>
                        </div>
                    </details>

                    <details class="py-2 group">
                        <summary class="flex cursor-pointer justify-between py-4">
                            <p class="text-[#343A40] dark:text-white font-semibold">
                                Contact Us
                            </p>
                            <span class="material-symbols-outlined group-open:rotate-180 transition">
                                expand_more
                            </span>
                        </summary>
                        <div class="text-slate-600 dark:text-slate-400 pb-4">
                            <p>
                                If you have any questions about this Privacy Policy, contact us at:
                            </p>
                            <a href="mailto:bloodconnect.web@gmail.com"
                               class="text-primary font-medium hover:underline">
                                bloodconnect.web@gmail.com
                            </a>
                        </div>
                    </details>

                </div>
            </div>
        </main>
    </div>
</body>
