@model BloodDonation.Models.AdminListViewModel
@{
    ViewData["Title"] = "Admins Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="flex-1 p-6 md:p-8 lg:p-10 overflow-y-auto">
    <div class="flex flex-wrap justify-between items-center gap-3 mb-8">
        <div>
            <h1 class="text-gray-900 dark:text-white text-3xl font-black leading-tight tracking-[-0.033em]">System Administrators</h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Manage admin roles and permissions</p>
        </div>
        <a asp-action="CreateAdmin" class="flex items-center justify-center gap-2 rounded-lg h-10 px-5 bg-primary text-white text-sm font-bold shadow-md hover:bg-primary/90 transition-all">
            <span class="material-symbols-outlined text-lg">add</span>
            <span>Add New Admin</span>
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <!-- Total Admins -->
        <div class="flex flex-col gap-1 rounded-xl p-6 border border-gray-100 dark:border-white/10 bg-white dark:bg-background-dark shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2 mb-2">
                <span class="material-symbols-outlined text-primary text-3xl">group</span>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium uppercase tracking-wider whitespace-nowrap">
                    Total Admins
                </p>
            </div>
            <p class="text-gray-900 dark:text-white text-3xl font-bold leading-tight">@Model.TotalAdmins</p>
        </div>

        <!-- Active Users -->
        <div class="flex flex-col gap-1 rounded-xl p-6 border border-gray-100 dark:border-white/10 bg-white dark:bg-background-dark shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2 mb-2">
                <span class="material-symbols-outlined text-green-600 text-3xl">verified_user</span>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium uppercase tracking-wider whitespace-nowrap">
                    Active Admins
                </p>
            </div>
            <p class="text-gray-900 dark:text-white text-3xl font-bold leading-tight">@Model.ActiveAdmins</p>
        </div>

        <!-- Pending Users -->
        <div class="flex flex-col gap-1 rounded-xl p-6 border border-gray-100 dark:border-white/10 bg-white dark:bg-background-dark shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2 mb-2">
                <span class="material-symbols-outlined text-yellow-500 text-3xl">hourglass_top</span>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium uppercase tracking-wider whitespace-nowrap">
                    Pending Admins
                </p>
            </div>
            <p class="text-gray-900 dark:text-white text-3xl font-bold leading-tight">@Model.PendingAdmins</p>
        </div>

        <!-- Inactive Users -->
        <div class="flex flex-col gap-1 rounded-xl p-6 border border-gray-100 dark:border-white/10 bg-white dark:bg-background-dark shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2 mb-2">
                <span class="material-symbols-outlined text-red-500 text-3xl">person_off</span>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium uppercase tracking-wider whitespace-nowrap">
                    Inactive Admins
                </p>
            </div>
            <p class="text-gray-900 dark:text-white text-3xl font-bold leading-tight">@Model.InactiveAdmins</p>
        </div>
    </div>

    <div class="bg-white dark:bg-background-dark rounded-xl shadow-sm border border-gray-100 dark:border-white/10 overflow-hidden flex flex-col">
        <form asp-action="AdminManagement" method="get" class="flex items-center justify-center gap-4 p-4 border-b border-gray-100 dark:border-white/10 bg-gray-50/50 dark:bg-white/[0.02]">

            <div class="relative w-full max-w-sm">
                <div class="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">search</span>
                </div>
                <input name="searchString"
                       value="@ViewBag.CurrentFilter"
                       class="w-full pl-10 pr-4 py-2 text-sm rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-gray-400"
                       placeholder="Search administrators by name or email..."
                       type="text" />
            </div>

            <button type="submit"
                    class="px-6 h-[38px] w-[200px] flex items-center ml-20 justify-center gap-2 rounded-lg bg-red-600 font-semibold text-white hover:bg-red-700 transition shrink-0">
                <span class="material-symbols-outlined text-[20px]">search</span>
                Search
            </button>

        </form>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="bg-gray-50 dark:bg-white/5 text-xs uppercase text-gray-500 dark:text-gray-400 font-semibold border-b border-gray-100 dark:border-white/10">
                    <tr>
                        <th class="px-6 py-4" scope="col">ID</th>
                        <th class="px-6 py-4" scope="col">Admin</th>
                        <th class="px-6 py-4" scope="col">Email</th>
                        <th class="px-6 py-4" scope="col">Created On</th>
                        <th class="px-6 py-4" scope="col">Status</th>
                        <th class="px-6 py-4 text-right" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-white/10">
                    @foreach (var admin in Model.Admins)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-white/5 transition-colors group">
                            <td class="px-6 py-4 font-mono text-xs text-gray-500">#@admin.Id</td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="font-bold text-gray-900 dark:text-white">@admin.FirstName @admin.LastName</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-xs text-gray-500">@admin.Email</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-gray-500">@admin.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="size-2 rounded-full bg-green-500"></div>
                                    <span class="text-gray-700 dark:text-gray-300">Active</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-1 opacity-100 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity">
                                    <a asp-action="EditAdmin" asp-route-id="@admin.Id" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-white/10 text-gray-500 hover:text-blue-700 transition-colors" title="Edit Details">
                                        <span class="material-symbols-outlined text-[20px]">edit</span>
                                    </a>
                                    <form asp-action="DeleteAdmin" asp-route-id="@admin.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this admin?');" class="inline">
                                        <button type="submit" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-white/10 text-gray-500 hover:text-red-600 transition-colors" title="Delete Account">
                                            <span class="material-symbols-outlined text-[20px]">delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center p-4 border-t border-gray-100 dark:border-white/10 bg-gray-50/50 dark:bg-white/[0.02]">
            <span class="text-sm text-gray-500 dark:text-gray-400">Showing @Model.Admins.Count of @Model.TotalAdmins admins</span>
            <div class="inline-flex rounded-lg shadow-sm">
                <button disabled class="px-3 py-1.5 text-sm font-medium text-gray-500 bg-white dark:bg-white/5 border border-gray-200 dark:border-white/20 rounded-l-lg hover:bg-gray-50 dark:hover:bg-white/10 disabled:opacity-50">Previous</button>
                <button class="px-3 py-1.5 text-sm font-medium text-white bg-primary border border-primary z-10">1</button>
                <button disabled class="px-3 py-1.5 text-sm font-medium text-gray-500 bg-white dark:bg-white/5 border border-l-0 border-gray-200 dark:border-white/20 rounded-r-lg hover:bg-gray-50 dark:hover:bg-white/10">Next</button>
            </div>
        </div>
    </div>
</main>