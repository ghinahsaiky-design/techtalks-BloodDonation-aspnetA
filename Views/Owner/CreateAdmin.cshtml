@model BloodDonation.Models.CreateAdminViewModel
@{
    ViewData["Title"] = "Add New Admin";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="flex-1 p-6 md:p-8 lg:p-10">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center gap-4 mb-8">
            <a asp-action="AdminManagement" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-white/10 transition-colors">
                <span class="material-symbols-outlined text-gray-500">arrow_back</span>
            </a>
            <div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Add New Administrator</h1>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Create a new admin account with full system access</p>
            </div>
        </div>

        <div class="bg-white dark:bg-background-dark rounded-xl shadow-sm border border-gray-100 dark:border-white/10 p-6 md:p-8">
            <form asp-action="CreateAdmin" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm bg-red-50 p-3 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label asp-for="FirstName" class="text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                        <input asp-for="FirstName" class="w-full px-4 py-2 rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-xs text-red-500"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="LastName" class="text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                        <input asp-for="LastName" class="w-full px-4 py-2 rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-xs text-red-500"></span>
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="Email" class="text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <input asp-for="Email" class="w-full px-4 py-2 rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="admin@example.com" />
                    <span asp-validation-for="Email" class="text-xs text-red-500"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label asp-for="Password" class="text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                        <input asp-for="Password" class="w-full px-4 py-2 rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-xs text-red-500"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="ConfirmPassword" class="text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                        <input asp-for="ConfirmPassword" class="w-full px-4 py-2 rounded-lg border border-gray-200 dark:border-white/20 bg-white dark:bg-white/5 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500"></span>
                    </div>
                </div>

                <div class="pt-4 flex items-center justify-end gap-3">
                    <a asp-action="AdminManagement" class="px-5 py-2.5 rounded-lg border border-gray-200 dark:border-white/20 text-gray-600 dark:text-gray-300 font-medium hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">Cancel</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg bg-primary text-white font-bold shadow-md hover:bg-primary/90 transition-all flex items-center gap-2">
                        <span class="material-symbols-outlined text-sm">check</span>
                        Create Admin
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
