@model BloodDonation.Models.AdminActionsViewModel
@{
    ViewData["Title"] = "Admin Actions";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="flex-1 p-6 md:p-8 lg:p-10 bg-background-light/50">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-black text-gray-800 dark:text-white tracking-tight">Admin Activity Log</h1>
            <p class="text-gray-500 mt-1">Comprehensive history of actions performed by administrators</p>
        </div>
        <a asp-action="Index" class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-50 shadow-sm">
            <span class="material-symbols-outlined text-sm">arrow_back</span>
            Back to Dashboard
        </a>
    </div>

    <div class="rounded-xl border border-gray-100 dark:border-white/10 bg-white dark:bg-background-dark shadow-sm overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-white/10 flex justify-between items-center">
            <h2 class="text-lg font-bold text-gray-800 dark:text-white">All Actions</h2>
            <div class="flex gap-2">
                <!-- Placeholder for future filters -->
                <button class="p-2 text-gray-400 hover:text-primary transition-colors">
                    <span class="material-symbols-outlined">filter_list</span>
                </button>
                <button class="p-2 text-gray-400 hover:text-primary transition-colors">
                    <span class="material-symbols-outlined">download</span>
                </button>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-500 uppercase bg-gray-50 dark:bg-white/5 border-b border-gray-100 dark:border-white/10">
                    <tr>
                        <th class="px-6 py-4 font-semibold">Action</th>
                        <th class="px-6 py-4 font-semibold">Performed By</th>
                        <th class="px-6 py-4 font-semibold">Details</th>
                        <th class="px-6 py-4 font-semibold text-right">Date & Time</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-white/10">
                    @if (Model.Actions != null && Model.Actions.Any())
                    {
                        @foreach (var action in Model.Actions)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-white/5 transition-colors group">
                                <td class="px-6 py-4">
                                    <span class="font-medium text-gray-900 dark:text-white">@action.Name</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center text-sm font-bold">
                                            @action.PerformedByUser.FirstName.Substring(0,1)
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900 dark:text-white">@action.PerformedByUser.FirstName @action.PerformedByUser.LastName</p>
                                            <p class="text-xs text-gray-500">@action.PerformedByUser.Email</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-gray-500 max-w-xs truncate" title="@(action.Description ?? "-")">
                                    @(action.Description ?? "-")
                                </td>
                                <td class="px-6 py-4 text-right text-gray-500">
                                    <div class="flex flex-col items-end">
                                        <span class="font-medium text-gray-900 dark:text-white">@action.PerformedAt.ToString("MMM dd, yyyy")</span>
                                        <span class="text-xs">@action.PerformedAt.ToString("HH:mm")</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-gray-500">
                                <div class="flex flex-col items-center justify-center gap-2">
                                    <span class="material-symbols-outlined text-4xl text-gray-300">history_toggle_off</span>
                                    <p>No admin actions recorded yet.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination (Static for now) -->
        <div class="p-4 border-t border-gray-100 dark:border-white/10 flex justify-between items-center text-sm text-gray-500">
            <span>Showing recent 100 actions</span>
            <div class="flex gap-2">
                <button disabled class="px-3 py-1 border border-gray-200 rounded hover:bg-gray-50 disabled:opacity-50">Previous</button>
                <button disabled class="px-3 py-1 border border-gray-200 rounded hover:bg-gray-50 disabled:opacity-50">Next</button>
            </div>
        </div>
    </div>
</main>
