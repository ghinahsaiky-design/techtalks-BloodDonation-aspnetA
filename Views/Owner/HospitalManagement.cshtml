@model IEnumerable<BloodDonation.Models.Hospital>

@{
    ViewData["Title"] = "Hospital Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="flex-1 flex flex-col h-full overflow-hidden relative">

    <!-- Scrollable Content -->
    <div class="flex-1 overflow-y-auto p-8">
        <div class="max-w-7xl mx-auto flex flex-col gap-6">
            <!-- Page Heading -->
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                <div class="flex flex-col gap-1">
                    <h2 class="text-3xl font-black text-text-main dark:text-white tracking-tight">Hospital Management</h2>
                    <p class="text-text-muted dark:text-gray-400">Manage and oversee all partner hospitals registered in the system.</p>
                </div>
                <button id="openAddHospitalModal" type="button" class="flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-lg font-medium shadow-sm hover:shadow-md transition-all active:scale-95">
                    <span class="material-symbols-outlined text-xl">add</span>
                    <span>Add New Hospital</span>
                </button>
            </div>
            
            <!-- Filters & Search Toolbar -->
            <div class="bg-white dark:bg-surface-dark p-5 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800">
                <form asp-action="HospitalManagement" asp-controller="Owner" method="get" class="flex flex-col lg:flex-row gap-5">
                    <!-- Search -->
                    <div class="flex-1 relative group">
                        <span class="material-symbols-outlined absolute left-3.5 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors">search</span>
                        <input name="q" value="@ViewBag.SearchQuery" class="w-full pl-11 pr-4 py-3 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl text-sm text-text-main dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-primary/20 focus:border-primary focus:outline-none transition-all" placeholder="Search by name, ID, or email..." type="text" onchange="this.form.submit()" />
                    </div>
                    
                    <!-- Filter Group -->
                    <div class="flex flex-wrap items-center gap-3">
                        <div class="relative min-w-[160px]">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-lg pointer-events-none">radio_button_checked</span>
                            <select name="status" onchange="this.form.submit()" class="w-full pl-10 pr-8 py-3 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl text-sm font-medium text-text-main dark:text-gray-200 focus:ring-2 focus:ring-primary/20 focus:border-primary cursor-pointer appearance-none transition-all">
                                <option value="All" selected="@(ViewBag.CurrentStatus == "All")">All Statuses</option>
                                <option value="Active" selected="@(ViewBag.CurrentStatus == "Active")">Active</option>
                                <option value="Inactive" selected="@(ViewBag.CurrentStatus == "Inactive")">Inactive</option>
                                <option value="Suspended" selected="@(ViewBag.CurrentStatus == "Suspended")">Suspended</option>
                            </select>
                            <span class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">expand_more</span>
                        </div>
                        
                        <div class="relative min-w-[200px]">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-lg pointer-events-none">location_on</span>
                            <select name="location" onchange="this.form.submit()" class="w-full pl-10 pr-8 py-3 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl text-sm font-medium text-text-main dark:text-gray-200 focus:ring-2 focus:ring-primary/20 focus:border-primary cursor-pointer appearance-none transition-all">
                                <option value="All" selected="@(ViewBag.CurrentLocation == "All")">All Locations</option>
                                @foreach (var loc in ViewBag.Locations as List<string> ?? new List<string>())
                                {
                                    <option value="@loc" selected="@(ViewBag.CurrentLocation == loc)">@loc</option>
                                }
                            </select>
                            <span class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">expand_more</span>
                        </div>

                        <div class="h-8 w-px bg-gray-200 dark:bg-gray-700 mx-1 hidden lg:block"></div>
                        
                        <a href="@Url.Action("HospitalManagement", "Owner")" class="flex items-center gap-2 text-gray-500 hover:text-primary font-semibold text-sm whitespace-nowrap px-4 py-2.5 rounded-xl hover:bg-primary/5 transition-all">
                            <span class="material-symbols-outlined text-xl">filter_list_off</span>
                            <span>Clear Filters</span>
                        </a>
                    </div>
                </form>
            </div>

            <!-- Data Table Card -->
            <div class="bg-white dark:bg-surface-dark rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden flex flex-col">
                <div class="overflow-x-auto">
                    <table class="w-full min-w-[1000px] text-left border-collapse">
                        <thead>
                            <tr class="border-b border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/30">
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Hospital ID</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Name &amp; Contact</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Location</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Role</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Status</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400">Registered On</th>
                                <th class="py-4 px-6 text-xs font-bold uppercase tracking-wider text-text-muted dark:text-gray-400 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-50 dark:divide-gray-800">
                            @{
                                var items = Model ?? Enumerable.Empty<BloodDonation.Models.Hospital>();
                            }
                            @foreach (var h in items)
                            {
                                <tr class="group hover:bg-background-light dark:hover:bg-gray-800/50 transition-colors border-b border-gray-50 dark:border-gray-800/50">
                                    <td class="py-4 px-6">
                                        <span class="font-mono text-xs font-semibold text-gray-400 bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">#HOSP-@h.Id.ToString("D3")</span>
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary font-bold text-lg shrink-0">
                                                @((!string.IsNullOrEmpty(h.Name) ? h.Name.Substring(0, 1).ToUpper() : ""))
                                            </div>
                                            <div class="flex flex-col">
                                                <span class="text-sm font-bold text-text-main dark:text-white group-hover:text-primary transition-colors">@h.Name</span>
                                                <span class="text-xs text-text-muted">@(h.User?.Email ?? "No Email")</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="flex items-center gap-1.5 text-sm text-text-main dark:text-gray-300">
                                            <span class="material-symbols-outlined text-[18px] text-gray-400">location_on</span>
                                            @h.City@((!string.IsNullOrWhiteSpace(h.State)) ? ", " + h.State : "")
                                        </div>
                                    </td>
                                    <td class="py-4 px-6">
                                        <span class="px-2 py-0.5 rounded bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300 font-bold border border-purple-200 dark:border-purple-800 text-xs">Admin</span>
                                    </td>
                                    <td class="py-4 px-6">
                                        @{
                                            var status = h.User?.Status ?? "Active";
                                            var statusClass = status == "Active" ? "bg-green-50 text-green-700 border-green-100 dark:bg-green-900/30 dark:text-green-400 dark:border-green-800" :
                                                              status == "Inactive" ? "bg-gray-50 text-gray-700 border-gray-100 dark:bg-gray-900/30 dark:text-gray-400 dark:border-gray-800" :
                                                              status == "Suspended" ? "bg-red-50 text-red-700 border-red-100 dark:bg-red-900/30 dark:text-red-400 dark:border-red-800" :
                                                              "bg-amber-50 text-amber-700 border-amber-100 dark:bg-amber-900/30 dark:text-amber-400 dark:border-amber-800";
                                            var dotClass = status == "Active" ? "bg-green-500" :
                                                           status == "Inactive" ? "bg-gray-500" :
                                                           status == "Suspended" ? "bg-red-500" :
                                                           "bg-amber-500";
                                        }
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold @statusClass border">
                                            <span class="w-1.5 h-1.5 rounded-full @dotClass"></span>
                                            @status
                                        </span>
                                    </td>
                                    <td class="py-4 px-6">
                                        <span class="text-sm text-text-main dark:text-gray-300">@(h.User?.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy") ?? "N/A")</span>
                                    </td>
                                    <td class="py-4 px-6 text-right">
                                        <div class="flex items-center justify-end gap-1">
                                            <button type="button" onclick="openDetailsModal(@h.Id)" class="p-2 rounded-lg hover:bg-primary/10 text-gray-400 hover:text-primary transition-all" title="View Details">
                                                <span class="material-symbols-outlined text-xl">visibility</span>
                                            </button>

                                            <button type="button" onclick="openEditModal(@h.Id)" class="p-2 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 text-gray-400 hover:text-blue-600 transition-all" title="Edit Hospital">
                                                <span class="material-symbols-outlined text-xl">edit</span>
                                            </button>

                                            <button type="button" onclick="openAddTeamMemberModal(@h.Id)" class="p-2 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-900/20 text-gray-400 hover:text-purple-600 transition-all" title="Add Team Member">
                                                <span class="material-symbols-outlined text-xl">person_add</span>
                                            </button>

                                            <form asp-action="Delete" asp-controller="Hospital" method="post" onsubmit="return confirm('Are you sure you want to delete @h.Name? This will also delete their login account.');" class="inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@h.Id" />
                                                <button type="submit" class="p-2 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-gray-400 hover:text-red-600 transition-all" title="Delete Hospital">
                                                    <span class="material-symbols-outlined text-xl">delete</span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>

                                @if(h.HospitalStaff != null && h.HospitalStaff.Any())
                                {
                                    @foreach(var staff in h.HospitalStaff)
                                    {
                                        <tr class="bg-gray-50/30 dark:bg-gray-800/20 border-b border-gray-50 dark:border-gray-800/50">
                                            <td class="py-3 px-6 text-right">
                                                <span class="material-symbols-outlined text-gray-300 text-lg rotate-180" style="transform: scaleX(-1);">subdirectory_arrow_right</span>
                                            </td>
                                            <td class="py-3 px-6">
                                                <div class="flex items-center gap-3 pl-4 border-l-2 border-gray-200 dark:border-gray-700">
                                                    <div class="flex flex-col">
                                                        <span class="text-sm font-medium text-text-main dark:text-gray-300">@(staff.User?.FirstName + " " + staff.User?.LastName)</span>
                                                        <span class="text-xs text-text-muted">@(staff.User?.Email ?? "No Email")</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-6"></td> <!-- Location Empty -->
                                            <td class="py-3 px-6">
                                                @if(staff.Role == "Coordinator")
                                                {
                                                    <span class="px-2 py-0.5 rounded bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 font-bold border border-blue-200 dark:border-blue-800 text-xs">Coordinator</span>
                                                }
                                                else if(staff.Role == "Admin")
                                                {
                                                    <span class="px-2 py-0.5 rounded bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300 font-bold border border-purple-200 dark:border-purple-800 text-xs">Admin</span>
                                                }
                                                else
                                                {
                                                    <span class="px-2 py-0.5 rounded bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 font-bold border border-gray-200 dark:border-gray-700 text-xs">Staff</span>
                                                }
                                            </td>
                                            <td class="py-3 px-6">
                                                @{
                                                    var sStatus = staff.Status ?? "Active";
                                                    var sStatusClass = sStatus == "Active" ? "text-green-600 dark:text-green-400" : "text-gray-500";
                                                }
                                                <span class="text-xs font-semibold @sStatusClass">@sStatus</span>
                                            </td>
                                            <td class="py-3 px-6">
                                                <span class="text-xs text-text-muted">@(staff.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy"))</span>
                                            </td>
                                            <td class="py-3 px-6 text-right">
                                                <div class="flex items-center justify-end gap-1">
                                                    <button type="button" onclick="openEditTeamMemberModal(@staff.Id)" class="p-1.5 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 text-gray-400 hover:text-blue-600 transition-all" title="Edit Member">
                                                        <span class="material-symbols-outlined text-lg">edit</span>
                                                    </button>
                                                    
                                                    <form asp-action="DeleteTeamMember" asp-controller="Owner" method="post" onsubmit="return confirm('Are you sure you want to delete this team member?');" class="inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@staff.Id" />
                                                        <button type="submit" class="p-1.5 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-gray-400 hover:text-red-600 transition-all" title="Delete Member">
                                                            <span class="material-symbols-outlined text-lg">delete</span>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            @if (!items.Any())
                            {
                                <tr>
                                    <td colspan="7" class="py-12 px-6 text-center">
                                        <div class="flex flex-col items-center gap-3">
                                            <span class="material-symbols-outlined text-5xl text-gray-300">search_off</span>
                                            <p class="text-gray-500 font-medium">No hospitals found matching your criteria.</p>
                                            <a href="@Url.Action("HospitalManagement", "Owner")" class="text-primary hover:underline text-sm font-semibold">Clear all filters</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Improved Pagination & Total Text -->
                <div class="bg-gray-50/50 dark:bg-gray-800/30 px-6 py-5 border-t border-gray-100 dark:border-gray-800 flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="flex items-center gap-3">
                        <div class="flex -space-x-2">
                            @foreach (var h in items.Take(3))
                            {
                                <div class="w-8 h-8 rounded-full border-2 border-white dark:border-gray-900 bg-primary/10 flex items-center justify-center text-[10px] font-bold text-primary">
                                    @((!string.IsNullOrEmpty(h.Name) ? h.Name.Substring(0, 1).ToUpper() : ""))
                                </div>
                            }
                            @if (items.Count() > 3)
                            {
                                <div class="w-8 h-8 rounded-full border-2 border-white dark:border-gray-900 bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-[10px] font-bold text-gray-500">
                                    +@(items.Count() - 3)
                                </div>
                            }
                        </div>
                        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">
                            Total: <span class="text-gray-900 dark:text-white font-bold">@items.Count()</span> partner hospitals
                        </p>
                    </div>
                    
                    @* <div class="flex items-center gap-2">
                        <button class="px-4 py-2 text-sm font-bold text-gray-500 dark:text-gray-400 rounded-xl hover:bg-white dark:hover:bg-gray-800 border border-transparent hover:border-gray-200 dark:hover:border-gray-700 disabled:opacity-50 transition-all" disabled="">
                            Previous
                        </button>
                        <div class="flex items-center gap-1">
                            <button class="w-10 h-10 flex items-center justify-center text-sm rounded-xl bg-primary text-white font-bold shadow-sm shadow-primary/20">1</button>
                        </div>
                        <button class="px-4 py-2 text-sm font-bold text-gray-500 dark:text-gray-400 rounded-xl hover:bg-white dark:hover:bg-gray-800 border border-transparent hover:border-gray-200 dark:hover:border-gray-700 transition-all">
                            Next
                        </button>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</main>

@* Add Hospital modal container *@
<div id="addHospitalContainer">
    @await Html.PartialAsync("~/Views/Owner/AddNewHospital.cshtml", new BloodDonation.Models.AddNewHospitalViewModel())
</div>

@* Edit modal container *@
<div id="editHospitalContainer"></div>
@* Details modal container *@
<div id="detailsHospitalContainer"></div>
@* Add Team Member modal container *@
<div id="addTeamMemberContainer"></div>
@* Edit Team Member modal container *@
<div id="editTeamMemberContainer"></div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Store the function globally so the onclick in the table works
        window.openEditModal = function(id) {
            const container = document.getElementById('editHospitalContainer');
            fetch('/Hospital/EditModal/' + id)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load edit modal');
                    return response.text();
                })
                .then(html => {
                    container.innerHTML = html;
                    transitionModal('editHospitalBindingModal', 'show');
                    bindForm('editHospitalForm', 'editHospitalContainer', 'editHospitalBindingModal');
                })
                .catch(err => console.error(err));
        };

        window.openDetailsModal = function(id) {
            const container = document.getElementById('detailsHospitalContainer');
            fetch('/Hospital/DetailsModal/' + id)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load details modal');
                    return response.text();
                })
                .then(html => {
                    container.innerHTML = html;
                    transitionModal('detailsHospitalBindingModal', 'show');
                })
                .catch(err => console.error(err));
        };

        window.openAddTeamMemberModal = function(hospitalId) {
            const container = document.getElementById('addTeamMemberContainer');
            fetch('/Owner/AddTeamMemberModal?hospitalId=' + hospitalId)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load modal');
                    return response.text();
                })
                .then(html => {
                    container.innerHTML = html;
                    transitionModal('addTeamMemberModal', 'show');
                    bindForm('addTeamMemberForm', 'addTeamMemberContainer', 'addTeamMemberModal');
                    attachAddTeamMemberEvents();
                })
                .catch(err => console.error(err));
        };

        window.openEditTeamMemberModal = function(id) {
            const container = document.getElementById('editTeamMemberContainer');
            fetch('/Owner/EditTeamMemberModal/' + id)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load modal');
                    return response.text();
                })
                .then(html => {
                    container.innerHTML = html;
                    transitionModal('editTeamMemberModal', 'show');
                    bindForm('editTeamMemberForm', 'editTeamMemberContainer', 'editTeamMemberModal');
                    attachEditTeamMemberEvents();
                })
                .catch(err => console.error(err));
        };

        function bindForm(formId, containerId, modalId) {
            const form = document.getElementById(formId);
            if (!form) return;

            // Initialize validation
            if (typeof $ !== 'undefined' && $.validator && $.validator.unobtrusive) {
                $.validator.unobtrusive.parse(form);
            }

            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Check validation
                if (typeof $ !== 'undefined' && $(form).valid && !$(form).valid()) {
                    return;
                }

                const formData = new FormData(this);
                const btn = form.querySelector('button[type="submit"]');
                const originalText = btn ? btn.innerHTML : '';
                if(btn) {
                    btn.disabled = true;
                    btn.innerHTML = 'Saving...';
                }

                fetch(this.action, {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        return response.text().then(html => {
                            document.getElementById(containerId).innerHTML = html;
                            // Re-show modal and re-bind
                            transitionModal(modalId, 'show');
                            bindForm(formId, containerId, modalId);
                            // Re-attach close events
                            if(formId === 'addHospitalForm') attachAddModalEvents();
                            if(formId === 'addTeamMemberForm') attachAddTeamMemberEvents();
                            if(formId === 'editTeamMemberForm') attachEditTeamMemberEvents();
                        });
                    }
                })
                .catch(err => {
                    console.error(err);
                    if(btn) {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }
                    alert('An error occurred while saving.');
                });
            });
        }

        function transitionModal(modalId, action) {
            const modal = document.getElementById(modalId);
            if (!modal) return;
            
            if (action === 'show') {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    const content = modal.querySelector('div[class*="transform"]');
                    if(content) content.classList.remove('scale-95');
                }, 10);
            } else {
                modal.classList.add('opacity-0');
                const content = modal.querySelector('div[class*="transform"]');
                if(content) content.classList.add('scale-95');
                setTimeout(() => {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                    if(modalId === 'editHospitalBindingModal') document.getElementById('editHospitalContainer').innerHTML = '';
                    if(modalId === 'detailsHospitalBindingModal') document.getElementById('detailsHospitalContainer').innerHTML = '';
                    if(modalId === 'addTeamMemberModal') document.getElementById('addTeamMemberContainer').innerHTML = '';
                    if(modalId === 'editTeamMemberModal') document.getElementById('editTeamMemberContainer').innerHTML = '';
                }, 300);
            }
        }

        window.closeEditModal = function() {
            transitionModal('editHospitalBindingModal', 'hide');
        };

        window.closeDetailsModal = function() {
            transitionModal('detailsHospitalBindingModal', 'hide');
        };

        function attachAddModalEvents() {
            const openBtn = document.getElementById('openAddHospitalModal');
            const modal = document.getElementById('addHospitalModal');
            const closeBtn = document.getElementById('closeAddHospitalModal');
            const cancelBtn = document.getElementById('cancelAddHospital');
            const form = document.getElementById('addHospitalForm');

            if (openBtn) openBtn.onclick = showModal;
            if (closeBtn) closeBtn.onclick = hideModal;
            if (cancelBtn) cancelBtn.onclick = hideModal;

            function showModal() {
                if (!modal) return;
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    const content = document.getElementById('addHospitalModalContent');
                    if(content) content.classList.remove('scale-95');
                }, 10);
            }
            function hideModal() {
                if (!modal) return;
                modal.classList.add('opacity-0');
                const content = document.getElementById('addHospitalModalContent');
                if(content) content.classList.add('scale-95');
                setTimeout(() => {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                    if (form) {
                        form.reset();
                        if (typeof $ !== 'undefined' && $(form).data('validator')) {
                            $(form).validate().resetForm();
                        }
                    }
                }, 300);
            }
        }

        function attachAddTeamMemberEvents() {
            const modal = document.getElementById('addTeamMemberModal');
            const closeBtn = document.getElementById('closeAddTeamMemberModal');
            const cancelBtn = document.getElementById('cancelAddTeamMember');
            
            if (closeBtn) closeBtn.onclick = () => transitionModal('addTeamMemberModal', 'hide');
