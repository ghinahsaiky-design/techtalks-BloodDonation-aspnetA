@model IEnumerable<BloodDonation.Models.Hospital>

    @{
    ViewData["Title"] = "Hospital Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main class="flex-1 flex flex-col h-full overflow-hidden relative">

<!-- Scrollable Content -->
<div class="flex-1 overflow-y-auto p-8">
<div class="max-w-7xl mx-auto flex flex-col gap-6">
<!-- Page Heading -->
<div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
<div class="flex flex-col gap-1">
<h2 class="text-3xl font-black text-text-main dark:text-white tracking-tight">Hospital Management</h2>
<p class="text-text-muted dark:text-gray-400">Manage and oversee all partner hospitals registered in the system.</p>
</div>
<button id="openAddHospitalModal" type="button" class="flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-lg font-medium shadow-sm hover:shadow-md transition-all active:scale-95">
<span class="material-symbols-outlined text-xl">add</span>
<span>Add New Hospital</span>
</button>
</div>
<!-- Filters & Search Toolbar -->
            <div class="bg-white dark:bg-surface-dark p-4 rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 flex flex-col lg:flex-row gap-4 justify-between items-center">
<!-- Search -->
<form asp-action="Index" asp-controller="Hospital" method="get" class="w-full lg:w-96 relative">
<span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">search</span>
<input name="q" class="w-full pl-10 pr-4 py-2.5 bg-background-light dark:bg-gray-800 border-none rounded-lg text-sm text-text-main dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-primary/20 focus:outline-none" placeholder="Search by name, ID, or email..." type="text"/>
</form>
<!-- Filters -->
<div class="flex items-center gap-3 w-full lg:w-auto overflow-x-auto pb-1 lg:pb-0">
<div class="flex items-center gap-2 px-3 py-2 bg-background-light dark:bg-gray-800 rounded-lg cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors whitespace-nowrap">
<span class="text-sm font-medium text-text-main dark:text-gray-200">Status: All</span>
<span class="material-symbols-outlined text-lg text-gray-500">expand_more</span>
</div>
<div class="flex items-center gap-2 px-3 py-2 bg-background-light dark:bg-gray-800 rounded-lg cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors whitespace-nowrap">
<span class="text-sm font-medium text-text-main dark:text-gray-200">Location: All</span>
<span class="material-symbols-outlined text-lg text-gray-500">expand_more</span>
</div>
<div class="h-6 w-px bg-gray-300 dark:bg-gray-700 mx-1 hidden lg:block"></div>
<button type="button" class="flex items-center gap-1 text-primary hover:text-primary-dark font-medium text-sm whitespace-nowrap px-2">
<span class="material-symbols-outlined text-lg">filter_list_off</span>
<span>Reset</span>
</button>
</div>
</div>
<!-- Data Table Card -->
            <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-gray-100 dark:border-gray-800 overflow-hidden flex flex-col">
<div class="overflow-x-auto">
<table class="w-full min-w-[1000px] text-left border-collapse">
<thead>
<tr class="border-b border-gray-100 dark:border-gray-800">
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400">Hospital ID</th>
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400">Name &amp; Contact</th>
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400">Location</th>
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400">Status</th>
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400">Last Activity</th>
<th class="py-4 px-6 text-xs font-semibold uppercase tracking-wider text-text-muted dark:text-gray-400 text-right">Actions</th>
</tr>
</thead>
<tbody class="divide-y divide-gray-50 dark:divide-gray-800">
@{ 
    var items = Model ?? Enumerable.Empty<BloodDonation.Models.Hospital>();
    int counter = 0;
}
@foreach (var h in items)
{
    counter++;
<tr class="group hover:bg-background-light dark:hover:bg-gray-800/50 transition-colors">
<td class="py-4 px-6">
<span class="font-mono text-sm text-gray-500">#HOSP-@h.Id.ToString("D3")</span>
</td>
<td class="py-4 px-6">
<div class="flex items-center gap-3">
<div class="w-10 h-10 rounded-lg bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold text-lg shrink-0">
    @((!string.IsNullOrEmpty(h.Name) ? h.Name.Substring(0,1).ToUpper() : ""))
</div>
<div class="flex flex-col">
<span class="text-sm font-semibold text-text-main dark:text-white">@h.Name</span>
<span class="text-xs text-text-muted">@h.Email</span>
</div>
</div>
</td>
<td class="py-4 px-6">
<div class="flex items-center gap-1 text-sm text-text-main dark:text-gray-300">
<span class="material-symbols-outlined text-base text-gray-400">location_on</span>
@h.City@((!string.IsNullOrWhiteSpace(h.State)) ? ", " + h.State : "")
</div>
</td>
<td class="py-4 px-6">
<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-100 dark:bg-green-900/30 dark:text-green-400 dark:border-green-800">
<span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
Active
</span>
</td>
<td class="py-4 px-6">
<span class="text-sm text-text-main dark:text-gray-300">@(h.LastUpdatedAt?.ToLocalTime().ToString("g") ?? h.CreatedAt.ToLocalTime().ToString("g"))</span>
</td>
<td class="py-4 px-6 text-right">
<div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
<a asp-action="Details" asp-controller="Hospital" asp-route-id="@h.Id" class="p-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 hover:text-primary transition-colors" title="View Details">
<span class="material-symbols-outlined text-xl">visibility</span>
</a>

<a asp-action="Edit" asp-controller="Hospital" asp-route-id="@h.Id" class="p-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 hover:text-blue-600 transition-colors" title="Edit">
<span class="material-symbols-outlined text-xl">edit</span>
</a>

<form asp-action="Delete" asp-controller="Hospital" method="post" onsubmit="return confirm('Are you sure you want to delete @h.Name?');" class="inline">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@h.Id" />
    <button type="submit" class="p-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 hover:text-red-600 transition-colors" title="Delete">
        <span class="material-symbols-outlined text-xl">delete</span>
    </button>
</form>
</div>
</td>
</tr>
}
@if (!items.Any())
{
<tr>
    <td colspan="6" class="py-8 px-6 text-center text-gray-500">No hospitals found.</td>
</tr>
}
</tbody>
</table>
</div>
<!-- Pagination -->
<div class="bg-surface-light dark:bg-surface-dark px-6 py-4 border-t border-gray-100 dark:border-gray-800 flex items-center justify-between">
<p class="text-sm text-gray-500 dark:text-gray-400">Showing <span class="font-medium">1-@((Model?.Count() ?? 0) > 0 ? Model.Count() : 0)</span> of <span class="font-medium">@Model?.Count() ?? 0</span> hospitals</p>
<div class="flex items-center gap-2">
<button class="px-3 py-1 text-sm text-gray-500 dark:text-gray-400 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 disabled:opacity-50" disabled="">Previous</button>
<div class="flex items-center gap-1">
<button class="w-8 h-8 flex items-center justify-center text-sm rounded-md bg-primary text-white font-medium">1</button>
</div>
<button class="px-3 py-1 text-sm text-gray-500 dark:text-gray-400 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800">Next</button>
</div>
</div>
</div>
</div>
</div>
</main>

@* Render Add Hospital modal partial (keeps layout/design unchanged) *@
@await Html.PartialAsync("AddNewHospital", new BloodDonation.Models.AddNewHospitalViewModel())

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        (function () {
            const openBtn = document.getElementById('openAddHospitalModal');
            // Modal element id assumed to be 'addHospitalModal' inside AddNewHospital partial
            const modal = document.getElementById('addHospitalModal');
            const closeBtn = document.getElementById('closeAddHospitalModal');
            const cancelBtn = document.getElementById('cancelAddHospital');
            const form = document.getElementById('addHospitalForm');

            function showModal() {
                if (!modal) return;
                modal.classList.remove('hidden');
                modal.classList.add('flex');
            }
            function hideModal() {
                if (!modal) return;
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                if (form) {
                    form.reset();
                    if (typeof $ !== 'undefined' && $(form).data('validator')) {
                        $(form).validate().resetForm();
                    }
                }
            }

            if (openBtn) openBtn.addEventListener('click', showModal);
            if (closeBtn) closeBtn.addEventListener('click', hideModal);
            if (cancelBtn) cancelBtn.addEventListener('click', hideModal);

            // If the modal form is submitted and server returns validation errors, keep modal open.
            // This relies on server returning the same view with ModelState errors.
            if (form) {
                form.addEventListener('submit', function () {
                    // allow normal submit; server will redirect on success.
                    // Optionally you can implement AJAX here to stay on the same page.
                });
            }
        })();
    </script>
}